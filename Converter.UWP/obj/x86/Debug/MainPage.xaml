            <Button x:ConnectionId='4' x:Name="_plus" Content="+" HorizontalAlignment="Left" Margin="90,290,0,0" VerticalAlignment="Top"                    />
            <Button x:ConnectionId='5' x:Name="_minus" Content="-" HorizontalAlignment="Left" Margin="60,290,0,0" VerticalAlignment="Top"                     />
            <Button x:ConnectionId='6' x:Name="_divide" Content="/" HorizontalAlignment="Left" Margin="30,290,0,0" VerticalAlignment="Top"                      />
            
