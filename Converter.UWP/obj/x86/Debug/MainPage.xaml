        <Grid x:ConnectionId='1' x:Name="grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ComboBox x:ConnectionId='19' x:Name="codeSelector1" HorizontalAlignment="Left" Height="63" Margin="15,50,0,0" VerticalAlignment="Top" Width="211"/>
