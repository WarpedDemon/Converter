                <TextBox x:ConnectionId='27' x:Name="input" HorizontalAlignment="Left" Margin="40,150,0,0" Text="0" VerticalAlignment="Top" FontSize="48"/>
            </RelativePanel>
            <Button x:ConnectionId='22' x:Name="GetRateButton" Content="Get Rate" HorizontalAlignment="Left" Margin="750,50,0,0" VerticalAlignment="Top" FontSize="48"                            />
        </Grid>
        <Grid>
